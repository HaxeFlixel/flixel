{
	"haxecheckstyle.sourceFolders": [
		"flixel",
		"script",
		"tests/coverage/source",
		"tests/unit/src"
	],
	"[haxe]": {
		"editor.formatOnSave": true,
		"editor.formatOnSaveMode": "modifications"
	},
	"haxe.configurations": [
		{
			"label": "JS",
			"args": [
				"-lib",
				"openfl",
				"-lib",
				"lime",
				"--macro",
				"flixel.system.macros.FlxDefines.run()",
				"-js",
				"foo.js",
				"--remap",
				"flash:openfl"
			]
		}
	]
}