{
	"defaultSeverity": "WARNING",
	"baseDefines": [
		"FLX_MOUSE_ADVANCED",
		"FLX_NATIVE_CURSOR",
		"FLX_SOUND_TRAY",
		"FLX_POINTER_INPUT",
		"FLX_POST_PROCESS",
		"FLX_RECORD"
	],
	"defineCombinations": [
		["FLX_JOYSTICK_API"],
		["FLX_GAMEINPUT_API"],
		["flash", "web"],
		["html5", "js", "web"],
		["neko", "desktop", "sys"],
		["android", "cpp", "mobile"]
	],
	"exclude": {
		"all": [
			"TestSuite"
		],
		"AvoidStarImport": [
			"flixel.math.FlxRandomTest"
		]
	},
	"checks": [
		{
			"type": "ModifierOrder",
				"props": {
				"modifiers": [
					"OVERRIDE",
					"PUBLIC_PRIVATE",
					"STATIC",
					"MACRO",
					"INLINE",
					"DYNAMIC"
				]
			}
		},
		{
			"type": "ConstantName",
			"props": {
				"format": "^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$",
				"tokens": ["INLINE"]
			}
		},
		{
			"type": "LocalVariableName",
			"props": {
				"format": "^[a-z][a-zA-Z0-9]*$"
			}
		},
		{
			"type": "MemberName",
			"props": {
				"format": "^([a-z][a-zA-Z0-9]*|ID)$",
				"severity": "IGNORE",
				"tokens": [
					"CLASS",
					"TYPEDEF",
					"PUBLIC"
				]
			}
		},
		{
			"type": "MemberName",
			"props": {
				"format": "^_?[a-z][a-zA-Z0-9]*$",
				"tokens": [
					"CLASS",
					"PRIVATE"
				]
			}
		},
		{
			"type": "MemberName",
			"props": {
				"format": "^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$",
				"tokens": ["ENUM"]
			}
		},
		{
			"type": "MethodName",
			"props": {
				"format": "^[a-z][a-zA-Z0-9]*$"
			}
		},
		{
			"type": "TypeName",
			"props": {
				"format": "^[A-Z]+[a-zA-Z0-9]*$"
			}
		},
		{
			"type": "SimplifyBooleanExpression"
		},
		{
			"type": "SimplifyBooleanReturn"
		},
		{
			"type": "NullableParameter"
		},
		{
			"type": "EmptyPackage",
			"props": {
				"enforceEmptyPackage": true
			}
		},
		{
			"type": "AvoidStarImport"
		},
		{
			"type": "PublicAccessor"
		},
		{
			"type": "RedundantModifier"
		}
	]
}